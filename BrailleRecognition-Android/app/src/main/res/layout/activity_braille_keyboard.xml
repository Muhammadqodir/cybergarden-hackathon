<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".BrailleKeyboardActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/mainScroll"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="24dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/colorAccent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:minLines="3"
                        android:id="@+id/tvBraille"
                        style="@style/brailleText"
                        android:fontFamily="@font/braille"

                        android:textColor="@color/colotTextHighContrast"
                        android:textSize="32dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/translation_"
                    android:layout_marginLeft="12dp"
                    android:textSize="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:entries="@array/ABC"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="24dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/colorAccentLight"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:minLines="5"
                        android:id="@+id/tvText"
                        android:textSize="22dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="6"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="75dp"
            android:clickable="true"
            android:background="@drawable/btn_remove"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/ic_clear_symboll"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:clickable="true"
                    android:id="@+id/btnPoint_1"
                    android:background="@drawable/btn_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:id="@+id/point_1"
                        android:src="@drawable/ic_circle_1"
                        android:layout_height="55dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:id="@+id/btnPoint_2"
                    android:background="@drawable/btn_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:id="@+id/point_2"
                        android:src="@drawable/ic_circle_1"
                        android:layout_height="55dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:clickable="true"
                    android:id="@+id/btnPoint_3"
                    android:background="@drawable/btn_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:id="@+id/point_3"
                        android:src="@drawable/ic_circle_1"
                        android:layout_height="55dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/btnPoint_4"
                    android:clickable="true"
                    android:background="@drawable/btn_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:id="@+id/point_4"
                        android:src="@drawable/ic_circle_1"
                        android:layout_height="55dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/btnPoint_5"
                    android:clickable="true"
                    android:background="@drawable/btn_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:id="@+id/point_5"
                        android:src="@drawable/ic_circle_1"
                        android:layout_height="55dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/btnPoint_6"
                    android:layout_marginLeft="8dp"
                    android:clickable="true"
                    android:background="@drawable/btn_white"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:id="@+id/point_6"
                        android:src="@drawable/ic_circle_1"
                        android:layout_height="55dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:weightSum="2"
            android:minHeight="150dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_symbol"
                android:layout_height="match_parent"
                android:gravity="center"
                android:animateLayoutChanges="true"
                android:visibility="gone"
                android:id="@+id/btnLett"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ð"
                    android:id="@+id/tvLett"
                    android:textColor="@color/colotTextHighContrast"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_symbol"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:id="@+id/btnNumm"
                android:animateLayoutChanges="true"
                android:clickable="true"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:id="@+id/tvNumm"
                    android:textColor="@color/colotTextHighContrast"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>